{
    "compilerOptions": {
      "target": "ESNext",
      "strict": true,
      "outDir": "./prod",
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts", "src/*.ts"],
    "exclude": ["tests", "src/types/*.ts"]
  }