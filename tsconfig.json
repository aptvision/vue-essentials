{
    "compilerOptions": {
      "target": "ESNext",
      "strict": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  }