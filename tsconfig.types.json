{
    "compilerOptions": {
      "target": "ESNext",
      "strict": true,
      "outDir": "./types",
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "rootDir": "./src",
      "declaration": true,
      "emitDeclarationOnly": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["tests", "node_modules"]
  }
